<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.PlayerDetailsFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivPlayerImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/ivPlayerImage"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/tvName"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvClubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club Name"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/tvCountry"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvPlayerPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/tvClubName"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>